<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TextView_Header_Base" parent="TextAppearance.MaterialComponents.Headline3">
<!--        <item name="fontFamily">@font/asap_medium</item>-->
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">0.05</item>
        <item name="android:textSize">20dp</item>
    </style>
    <style name="TextInputEditText_MultiLine_Base" parent="ThemeOverlay.Material3.TextInputEditText.FilledBox">
        <item name="android:inputType">textMultiLine|textCapSentences|textAutoCorrect</item>
<!--        <item name="android:fontFamily">@font/asap</item>-->
        <item name="android:padding">12dp</item>
        <item name="android:maxLines">3</item>
        <item name="android:minLines">1</item>
        <item name="android:scrollbarAlwaysDrawVerticalTrack">true</item>
        <item name="android:scrollbarStyle">outsideOverlay</item>
        <item name="android:textSize">13dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">top</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="startIconTint">@color/theme_text_languagePicker</item>
        <item name="android:textColor">@color/theme_text_languagePicker</item>
        <item name="endIconDrawable">@color/transparent_languagePicker</item>
        <item name="boxBackgroundColor">?colorPrimaryContainer</item>
        <item name="android:textColorHint">@color/theme_text3_languagePicker</item>
<!--        <item name="android:scrollbarThumbVertical">@drawable/rounded_scrollbar_primary</item>-->
        <item name="android:scrollbars">vertical</item>
    </style>

    <style name="TextInputEditText_SingleLine_Base" parent="TextInputEditText_MultiLine_Base">
        <item name="android:inputType">textAutoCorrect|textCapSentences</item>
        <item name="android:maxLines">1</item>
        <item name="android:minLines">1</item>
        <item name="android:singleLine">true</item>
    </style>
    <style name="Overlay_App_RoundedCorners">
        <item name="cornerSize">50%</item>
    </style>
    <style name="TextView_Title_Base" parent="TextAppearance.MaterialComponents.Subtitle1">
<!--        <item name="fontFamily">@font/asap_medium</item>-->
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
        <item name="android:lineSpacingExtra">3dp</item>
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">@color/theme_text_languagePicker</item>
    </style>

    <style name="Dialog_Base" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="colorSurface">@color/md_surfaceContainer_languagePicker</item>
        <item name="colorOnSurface">?attr/colorOnBackground</item>
        <item name="android:textColor">@color/theme_text_languagePicker</item>
        <item name="alertDialogStyle">@style/AlertDialog_App</item>
        <item name="buttonBarPositiveButtonStyle">@style/Snackbar_ButtonStyle</item>
        <item name="buttonBarNegativeButtonStyle">@style/Dismiss_MaterialButton</item>
    </style>
    <style name="AlertDialog_App" parent="MaterialAlertDialog.Material3">
        <item name="shapeAppearance">@style/Overlay_App_15dpCorners</item>
    </style>
    <style name="Overlay_App_15dpCorners" parent="">
        <item name="cornerSize">15%</item>
    </style>
    <style name="Snackbar_ButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Snackbar">
        <item name="android:textColor">?colorPrimary</item>
        <item name="android:backgroundTint">@color/md_surfaceContainer_languagePicker</item>
    </style>
    <style name="Dismiss_MaterialButton" parent="ThemeOverlay.Material3.Button.TextButton">
        <item name="android:textColor">@color/theme_text2_languagePicker</item>
        <item name="android:elevation">0dp</item>
        <item name="android:backgroundTint">#00000000</item>
        <item name="textAllCaps">false</item>
        <item name="android:padding">12dp</item>
    </style>

</resources>