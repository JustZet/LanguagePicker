<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cvContainer"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:weightSum="10"
    app:strokeWidth="0dp"
    app:cardBackgroundColor="@color/transparent"
    app:cardCornerRadius="20dp"
    app:cardElevation="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="4dp"
        android:layout_marginHorizontal="2dp"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        android:weightSum="1"
        android:orientation="horizontal">
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/ivIcon"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:layout_marginEnd="8dp"
            android:layout_margin="1dp"
            android:scaleType="centerCrop"
            app:strokeWidth="1dp"
            app:strokeColor="@color/theme_text4"
            app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay_App_RoundedCorners"
            android:elevation="0dp" />


        <TextView
            android:id="@+id/tvName"
            android:layout_width="0dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:lines="2"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="4dp"
            android:layout_height="wrap_content"
            android:textSize="14dp"
            android:textStyle="normal"
            android:ellipsize="end"
            style="@style/TextView_Title"
            android:gravity="center|start"
            android:textColor="@color/theme_text1"
            tools:text="English"/>

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/ivCheck"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginEnd="8dp"
            android:layout_margin="2dp"
            android:scaleType="centerCrop"
            app:strokeWidth="1dp"
            app:contentPadding="6dp"
            android:src="@drawable/ic_check"
            app:strokeColor="@color/green_checked"
            app:tint="@color/green_checked"
            app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay_App_RoundedCorners"
            android:elevation="0dp" />


    </LinearLayout>

</com.google.android.material.card.MaterialCardView>